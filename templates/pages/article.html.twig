{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
{% endblock %}

{% block body %}
	<!-- Article Content -->
	<div class="container">
		<h4>Article Title</h4>
		<!-- Language Selector -->
		<div class="right">
			<form>
				<div class="input-field col s12">
					<select id="language-select">
						<option value="en" selected>English</option>
						<option value="de">German</option>
					</select>
					<label>Language</label>
				</div>
			</form>
		</div>
		<p id="article-text-en">
			English article text goes here
		</p>
		<p id="article-text-de" style="display:none">
			German article text goes here
		</p>
	</div>

{% endblock %}

{% block post_js %}
	{{ parent() }}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
		<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script>
		$(document).ready(function () { // Initialize Materialize Select
			var select = document.querySelectorAll('select');
			M.FormSelect.init(select);

			// Change article text based on language selection
			$("#language-select").change(function () {
				var selectedLang = $(this).val();
				if (selectedLang == "en") {
					$("#article-text-en").show();
					$("#article-text-de").hide();
				} else {
					$("#article-text-en").hide();
					$("#article-text-de").show();
				}
			});
		});
	</script>
{% endblock %}
